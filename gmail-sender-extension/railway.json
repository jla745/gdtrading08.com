{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd gmail-sender-extension/tracking-server && npm install",
    "watchPatterns": [
      "gmail-sender-extension/tracking-server/**"
    ]
  },
  "deploy": {
    "startCommand": "cd gmail-sender-extension/tracking-server && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}